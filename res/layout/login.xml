<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/lotextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:text="旅行的意义"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00ffff"
        android:textSize="80dp" />

    <EditText
        android:id="@+id/loeditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loeditText1"
        android:layout_alignRight="@+id/loeditText1"
        android:layout_alignTop="@+id/lotextView3"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/lotextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lotextView1"
        android:layout_below="@+id/loeditText1"
        android:layout_marginTop="81dp"
        android:text="密码"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff00ff"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/lotextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loeditText1"
        android:layout_alignBottom="@+id/loeditText1"
        android:layout_alignLeft="@+id/lotextView1"
        android:text="账号"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffff00"
        android:textSize="45dp" />

    <EditText
        android:id="@+id/loeditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lotextView1"
        android:layout_below="@+id/lotextView1"
        android:layout_marginTop="77dp"
        android:layout_toRightOf="@+id/loregist"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="40sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/loregist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lotextView3"
        android:layout_below="@+id/loeditText2"
        android:layout_marginTop="56dp"
        android:text="注册"
        android:textSize="45dp" />

    <Button
        android:id="@+id/lologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loregist"
        android:layout_alignRight="@+id/loeditText2"
        android:layout_marginRight="36dp"
        android:text="登陆"
        android:textSize="40sp" />

</RelativeLayout>